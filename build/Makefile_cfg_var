RED 		= 	\x1b[31m
YELLOW	 	= 	\x1b[33m
GREEN 		= 	\x1b[32m
RESET 		= 	\x1b[0m
SRCSDIR 	= 	../srcs
OBJSDIR 	= 	../objects
INCLUDES 	= 	../includes
LIBFTDIR	=	../libft
LIB			=	libft.a
LIBD      	=   $(LIBFTDIR)/$(LIB)
HEADERLIB   =   	$(LIBFTDIR)/includes/
LDFLAGS 	= 	-L$(LIBFTDIR) -lft
DEBUG		=	-g3
CFLAGS 		=  	-Wall -Werror -Wextra $(DEBUG)
CC 			= 	gcc $(CFLAGS)
HEADER		=	fdf.h
HEADERS		=	$(addprefix $(INCLUDES)/, $(HEADER))
